<h2>Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <%= f.input :password, autocomplete: "new-password", hint: "(#{@minimum_password_length} characters minimum)" %>
  <%= f.input :password_confirmation, autocomplete: "new-password" %>

  <%= f.button :submit, "Change my password", class: 'btn btn-primary' %>
<% end %>

<%= render "devise/shared/links" %>
